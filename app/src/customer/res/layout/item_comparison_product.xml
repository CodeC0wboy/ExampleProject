<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/firstItemPhotoProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/headphones"
        app:layout_constraintDimensionRatio="158:180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageViewCornerSize8" />

    <TextView
        android:id="@+id/firstItemTitle"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstItemPhotoProduct"
        tools:text="Bose Sport Earbuds â€“ True Wireless Bluetoo..." />

    <com.dnc.buendeal.core.core.ui.view.RatingStarsView
        android:id="@+id/firstProductRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstItemTitle" />

    <com.dnc.buendeal.core.core.ui.view.DiagonalStrikeTextView
        android:id="@+id/firstOldPrice"
        style="@style/InterRegular.CaptureInterRegular13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/old_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstProductRating"
        tools:text="$172.00" />

    <TextView
        android:id="@+id/firstItemPrice"
        style="@style/InterMedium.HeaderH4InterMedium16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_big"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstOldPrice"
        tools:text="$152.00" />

    <ImageView
        android:id="@+id/firstMoreBtnProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        android:src="@drawable/comparison_more_btn_selector"
        android:theme="@style/colorControlHighlight_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstProductRating" />

</androidx.constraintlayout.widget.ConstraintLayout>
