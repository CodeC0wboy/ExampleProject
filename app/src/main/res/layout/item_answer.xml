<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_answer">

    <TextView
        android:id="@+id/questionAnswerReviewUsername"
        style="@style/InterRegular.CaptureInterRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/by_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionAnswerDateAnswer"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:textColor="@color/dark_gray_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionAnswerReviewUsername"
        tools:text="Last March 2, 2020" />

    <ImageView
        android:id="@+id/questionAnswerDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/separator_answer_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionAnswerReviewUsername" />

    <TextView
        android:id="@+id/questionAnswerTextAnswer"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/dark_gray_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionAnswerDivider"
        tools:text="While we have to wait and see the long term reviews of gen2 airpods but for now I will stick with gen1 as there doesn't seem to be a huge improvement. Will be buying them on discount now hopefully around 100 bucks." />

    <TextView
        android:id="@+id/questionAnswerHelpful"
        style="@style/InterRegular.CaptureInterRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/margin_default_input"
        android:layout_marginBottom="12dp"
        android:text="@string/helpful"
        android:textColor="@color/dark_gray_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/questionAnswerPositive"
        app:layout_constraintTop_toBottomOf="@+id/questionAnswerTextAnswer" />

    <TextView
        android:id="@+id/questionAnswerPositive"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default_input"
        android:layout_marginBottom="1dp"
        android:text="@string/yes_d"
        android:textColor="@color/main_blue"
        app:layout_constraintBottom_toBottomOf="@+id/questionAnswerHelpful"
        app:layout_constraintEnd_toStartOf="@+id/questionAnswerNegative"
        app:layout_constraintTop_toTopOf="@+id/questionAnswerHelpful" />

    <TextView
        android:id="@+id/questionAnswerNegative"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="@string/no_d"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/questionAnswerHelpful"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionAnswerHelpful" />
</androidx.constraintlayout.widget.ConstraintLayout>
