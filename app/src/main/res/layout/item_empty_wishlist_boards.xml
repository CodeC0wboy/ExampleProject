<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/emptyBoardsProductsIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty_wishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleEmptyBoardsWishlist"
        style="@style/InterMedium.HeaderH4InterMedium16"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/havent_created_boards"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/emptyBoardsProductsIM"
        app:layout_constraintStart_toStartOf="@+id/emptyBoardsProductsIM"
        app:layout_constraintTop_toBottomOf="@+id/emptyBoardsProductsIM" />

    <TextView
        android:id="@+id/subtitleEmptyBoardsWishlist"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/create_board_add_items_you_like"
        android:textColor="@color/dark_gray_4"
        app:layout_constraintEnd_toEndOf="@+id/titleEmptyBoardsWishlist"
        app:layout_constraintStart_toStartOf="@+id/titleEmptyBoardsWishlist"
        app:layout_constraintTop_toBottomOf="@+id/titleEmptyBoardsWishlist" />

</androidx.constraintlayout.widget.ConstraintLayout>
