<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/innerFilterTitle"
        style="@style/InterMedium.InterMedium13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Brands" />

    <TextView
        android:id="@+id/innerFilterItem"
        style="@style/InterRegular.Body2InterRegular14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:text="@string/any"
        android:textColor="@color/typography_light"
        app:layout_constraintEnd_toStartOf="@+id/innerFilterArrowBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/innerFilterTitle" />

    <ImageView
        android:id="@+id/innerFilterArrowBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_chevron_right"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/innerFilterItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/innerFilterTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
