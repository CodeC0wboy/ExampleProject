<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/wishlist_popup_bg"
    android:paddingHorizontal="@dimen/margin_default_input">

    <TextView
        android:id="@+id/popupWishlistTitle"
        style="@style/InterRegular.CaptureInterRegular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_small"
        tools:text="@string/product_added_to_your_nwishlist"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupWishlistBtn"
        style="@style/InterMedium.LabelsInterMedium14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/add_to_board"
        android:textColor="@color/main_blue"
        app:layout_constraintBottom_toBottomOf="@+id/popupWishlistTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popupWishlistTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
