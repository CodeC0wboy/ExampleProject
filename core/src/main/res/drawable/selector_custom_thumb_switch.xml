<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:endColor="@color/white" android:gradientRadius="27" android:startColor="@color/dark_gray_1" android:type="radial" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="0dp" android:state_checked="false" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#ffffff" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:endColor="@color/dark_gray_3" android:gradientRadius="27" android:startColor="@color/dark_gray_1" android:type="radial" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>

            <item android:bottom="2dp" android:left="2dp" android:right="0dp" android:state_checked="true" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/main_blue" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
