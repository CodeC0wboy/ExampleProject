<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btnEsp"
        style="@style/InterRegular.Body1InterRegular16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_default_add_product_language_selector_left"
        android:paddingVertical="6dp"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="5dp"
        android:text="@string/esp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnEng"
        style="@style/InterRegular.Body1InterRegular16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_default_add_product_language_selector_right"
        android:paddingVertical="6dp"
        android:paddingStart="7dp"
        android:paddingEnd="@dimen/padding_small"
        android:text="@string/eng"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/btnEsp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
